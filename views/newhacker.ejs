<% include partials/header %>

<div class="container">
    
    <div class="row">
        <h2 style="text-align: center;">SIGN UP HERE!</h2>
        
        <div style="width: 30%; margin: 50px auto">
            <form action="/waitinglist" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="portrait" placeholder="picture url">                 
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="skill" placeholder="Please enter your skill">                 
                </div>
